@using Sandbox;
@using Sandbox.UI;

@inherits RootPanel;
@attribute [StyleSheet("/UI/Styles/_styles.scss")]

@namespace Home

<root>
    <HomeGUI />
    <RoomInfo />
    
    <TabMenu />

    <HomeChatBox />
    <HomeVoiceList />
    <HomeVoiceSpeaker />

    <HomeInventory />
    <RoomPanel />

    <NotificationPanel />
</root>

@code
{
    public ShopPlaceable ShopPlaceable { get; set; }

    internal HomeHud()
    {
        Game.RootPanel = this;
    }


    [ConCmd.Client("home_toggle_hud")]
    public static void ToggleHud()
    {
        Game.RootPanel.SetClass("hidden", !Game.RootPanel.HasClass("hidden"));
    }
}
