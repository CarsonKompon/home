@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Threading.Tasks;
@using Sandbox;
@using Sandbox.MenuSystem;
@using Sandbox.UI;
@using Sandbox.UI.GameMenu;
@inherits Panel;

@namespace Home

@if (Game.Menu.Lobby == null)
    return;

<root style="flex-direction: column; flex-shrink: 1; flex-grow: 1;">

    <div class="navbar">

        <div class="left">
            <a class="button" href="/"> Home </a>
            <span class="block">&gt;</span>
            <a class="button" href="/servers"> Server List </a>
            <span class="block">&gt;</span>
            <a class="button" href="/lobby"> Your Lobby </a>
            <span class="block">&gt;</span>
            <span class="block">Map</span>
        </div>

        <div class="right">
        </div>
    </div>

    <PackageList ShowFilters="@true" style="padding-bottom: 50px;" Query="ref:carsonk.home type:map sort:trending" OnSelected="@OnPackageSelected" Take=@(50)></PackageList>

</root>

@code
{
    void OnPackageSelected( Package package )
    {
        Game.Menu.Lobby.Map = package.FullIdent;
        this.Navigate( "/lobby" );
    }
}
