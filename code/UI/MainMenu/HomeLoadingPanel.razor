@using System
@using Sandbox;
@using Sandbox.UI;
@using Sandbox.Menu;
@attribute [StyleSheet]
@inherits RootPanel

@implements Sandbox.Menu.ILoadingScreenPanel

@namespace Home

<root class="loadingpanel">

    <img class="roof" src="/ui/ui_roof.png" />
    <div class="title">LOADING</div>
    <div class="subtitle">@Progress.Title</div>

    <div class="controls">
        <div class="btn" onclick="@Game.Menu.CancelLoading">
            Cancel
        </div>
    </div>

</root>

@code
{
    public LoadingProgress Progress;

    public void OnLoadingProgress( LoadingProgress progress )
    {
        Progress = progress;
        StateHasChanged();
    }
}
