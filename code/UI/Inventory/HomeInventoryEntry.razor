@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using System;
@using System.Collections.Generic;

@namespace Home

<root>
    <RotatingModelScenePanel Model="@GetModel()" />

    <label class="inventory-count" text=@GetAmount() />
</root>

@code
{
    
    public HomeDataInventoryEntry Entry;

    private string GetModel()
    {
        HomePlaceable placeable = HomePlaceable.Find(Entry.Id);
        return placeable.Model;
    }

    private string GetName()
    {
        HomePlaceable placeable = HomePlaceable.Find(Entry.Id);
        if(placeable == null) return "N/A";
        return placeable.Name;
    }

    private string GetAmount()
    {
        return Entry.Amount.ToString();
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(GetAmount());
    }
}